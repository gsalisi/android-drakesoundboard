<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#000000"
 >

	<ImageView
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:src="@drawable/bg_drakeapp" />

    <RelativeLayout
        android:id="@+id/rlayoutleft"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
     >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:background="#00000000">

            <ImageButton
                android:id="@+id/btnownit"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_ownit" />

            <ImageButton
                android:id="@+id/btnitsyours"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_itsyours" />

            <ImageButton
                android:id="@+id/btnworst"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_worst" />

            <ImageButton
                android:id="@+id/btnmofugga"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_mofugga" />

            <ImageButton
                android:id="@+id/btnthemotion"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_themotion" />
            
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayoutright"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_height="match_parent"
        android:layout_width="160dp"
	    android:orientation="vertical" >

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_gravity="center"
		    android:orientation="vertical">
	
	        <ImageButton
	            android:id="@+id/btncomethru"
	            android:layout_width="match_parent"
	            android:layout_height="54dp"
	            android:layout_gravity="center"
	            android:layout_marginBottom="5dp"
	            android:background="@drawable/btn_comethru" />
	
	        <ImageButton
	            android:id="@+id/btnigetit"
	            android:layout_width="match_parent"
	            android:layout_height="54dp"
	            android:layout_marginBottom="5dp"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/btn_igetit" />
	
	        <ImageButton
	            android:id="@+id/btnneva"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="5dp"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/btn_nevahluhdus" />
	
	        <ImageButton
	            android:id="@+id/btnstarted"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="5dp"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/btn_startedftb" />
	
	        <ImageButton
	            android:id="@+id/btnwhat"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="5dp"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/btn_whatsup" />
	    </LinearLayout>

    </RelativeLayout>

    
</RelativeLayout>